{
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "name": "Ruler",
  "version": "0.1.0",
  "description": "Measure the height and length of elements on the page",
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "main.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "icons": {
    "16": "ruler-16.png",
    "32": "ruler-32.png",
    "48": "ruler-48.png",
    "128": "ruler-128.png"
  }
}